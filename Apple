#include <string>
#include <iostream>
#include <fstream>
#include <sstream>
#include <cmath>
#include <stdexcept>
#include <vector>
#include <algorithm>
#include <cstring>
#include <memory>
using namespace std;


int main()
{
    int *ptr1 = new int(2);
    *ptr1 += 3;
    int *ptr2 = new int(*ptr1 + 4);
    delete ptr2;
    ptr2 = ptr1;
    cout << (*ptr2 + *ptr1) << "\n";
}
